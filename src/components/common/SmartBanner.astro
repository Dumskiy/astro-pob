---
import Picture from "./Picture.astro";
import Icon from './Icon.astro';

const { data } = Astro.props;
const currentData = data.items[0];
---

<div class="smart-banner">
  <div class="content">
    <h4 class="title gl-title" set:html={currentData.title} />
    <p class="descr gl-descr" set:html={currentData.descr} />
    <span class="price" set:html={currentData.price} />
  </div>
  <Picture class="image" path={currentData.image.path} sizes={currentData.image.sizes} />
  <button class="button-close">
    <Icon name="close" size="30" />
  </button>
</div>

<style lang="scss">
.smart-banner {
  position: relative;
  background: linear-gradient(129deg, #4aa9ff 0%, #4ad5ff 100%);
  border-radius: 1.6rem;
  
  @include tablet {
    display: flex;
    border-radius: 3rem;
  }
  @include laptop {
    transition: transform 0.4s cubic-bezier(0, 0, .4, 1);

    &:hover {
      transform: scale(1.02);
    }
  }
}

.content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  row-gap: 1.6rem;
  padding: 1.6rem;
  color: var(--light-primary);

  @include tablet {
    padding: 3rem;
    padding-right: 0;
  }
}

.title {
  font-size: 3rem;
  text-align: left;
  color: inherit;

  @include tablet {
    line-height: 1;
  }
}

.descr {
  text-align: left;

  @include laptop {
    font-size: 1.8rem;
  }
}

.price {
  margin-top: auto;
  font-weight: 700;
  font-size: 2rem;
  line-height: 1.2;

  @include laptop {
    font-size: 2.4rem;
  }
}

.image {
  @include mobile-only {
    margin: 0 auto;
  }
}

.button-close {
  position: absolute;
  top: 1.6rem;
  right: 1.6rem;
  padding: 0;
  background-color: transparent;
  border: none;
  cursor: pointer;
  color: rgba(#ffffff, 0.3);
  transition: color 0.4s;

  @include tablet {
    top: 2rem;
    right: 2rem;
  }

  &:hover {
    color: rgba(#ffffff, 0.6);
  }
}
</style>