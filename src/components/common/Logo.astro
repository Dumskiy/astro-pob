---
import Icon from './Icon.astro';
const { class: className = '', area, ...rest } = Astro.props;
const finalClass = `logo ${area ? `logo--${area}` : ''} ${className}`.trim();
---

<a class={finalClass} href="/" target="_blank" {...rest} >
  <Icon class="logo__icon" name="logo" width="50" height="50" />
  <Icon class="logo__text" name="logo-text" width="129" height="36" />
  <span class="sr-only">Главная страница</span>
</a>

<style lang="scss">
.logo {
  display: inline-flex;
  align-items: center;
  column-gap: 1rem;
}

.logo--header {
  .logo__text {
    @include tablet {
      width: 14.5rem;
      height: 4rem;
    }

    @include laptop {
      width: 16.2rem;
      height: 4.4rem;
    }
  }

  .logo__icon {
    @include laptop {
      width: 6rem;
      height: 6rem;
    }
  }
}

.logo--footer {
  .logo__text {
    width: 16.2rem;
    height: 4.4rem;
  }
}
</style>