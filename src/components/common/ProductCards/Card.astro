---
import Icon from '../Icon.astro';

const { data, tag: Tag = 'div' } = Astro.props;
---

<Tag class="card">
  <div class="content">
    <h3 class="title gl-title" set:html={data.title} />
    <p class="descr gl-descr" set:html={data.descr} />
    <div class="card-footer">
      <span class="price" set:html={data.price} />
      <a href="" class="link">
        <Icon name="arrow-prev-in-circle-gradient" width="60" height="60" />
        <Icon class="icon-gray" name="arrow-prev-in-circle" width="60" height="60" />
      </a>
    </div>
  </div>
</Tag>

<style lang="scss">
.card {
  --padding: 1.6rem;
  --border-radius: 1.6rem;
  --border-width: 0.1rem;
  --border-width-hover: 0.2rem;
  --background: #A9AAAC; //--dark-terteriary in hex6
  --background-hover: var(--blue-gradient);
  position: relative;
  display: flex;
  background: var(--background-hover);
  border-radius: var(--border-radius);
  transition: transform 0.4s cubic-bezier(0, 0, .4, 1);

  @include laptop {
    --padding: 3rem;
    --border-radius: 3rem;
  }

  &::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: var(--background);
    border-radius: var(--border-radius);
    transition: opacity 0.4s;
  }

  .content {
    position: relative;
    display: flex;
    flex-direction: column;
    row-gap: 1.6rem;
    margin: var(--border-width);
    padding: calc(var(--padding) - var(--border-width));
    background-color: var(--light-primary);
    border-radius: calc(var(--border-radius) - var(--border-width));
    transition: margin 0.4s, padding 0.4s, border-radius 0.4s;
  }

  &:hover {
    transform: scale(1.07);

    &::before {
      opacity: 0;
    }

    .content {
      margin: var(--border-width-hover);
      padding: calc(var(--padding) - var(--border-width-hover));
      border-radius: calc(var(--border-radius) - var(--border-width-hover));
    }

    .icon-gray {
      opacity: 0;
    }
  }
}

.title {
  text-align: left;
  font-size: 2.6rem;
  line-height: 1.2;
}

.descr {
  text-align: left;

  @include laptop {
    font-size: 2rem;
  }
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: auto;
}

.price {
  font-weight: 700;
  font-size: 2rem;
  line-height: 1.2;
  letter-spacing: -0.04em;
  color: var(--dark-primary);

  @include laptop {
    font-size: 2.4rem;
  }
}

.link {
  position: relative;
  display: block;
  width: 6rem;
  height: 6rem;
  text-decoration: none;
}

.link:hover .icon-gray {
  opacity: 0;
}

.icon-gray {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: var(--light-primary);
  transition: opacity 0.4s;
}

.button-more {
  display: block;
  margin: 0 auto;
  margin-top: 3rem;

  @include laptop {
    margin-top: 6rem;
  }
}
</style>
