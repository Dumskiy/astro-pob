---
import Section from "@/components/common/Section.astro";
import FormSubscribe from "@/components/common/FormSubscribe.astro";
import Agreement from "@/components/common/Agreement.astro";
import Icon from "@/components/common/Icon.astro";

const { data } = Astro.props;
---

<Section>
  <div class="wrapper">
    <div class="inner">
      <h4 class="title gl-title" set:html={data.title} />
      <p class="descr gl-descr" set:html={data.descr} />
      <FormSubscribe class="form" />
      <Agreement class="agreement" />
    </div>

    {data.tooltips && (
      <div class="tooltips">
        {data.tooltips.map((item) => (
          <div class="tooltips-item">
            <span set:html={item.text} />
            <Icon class="tooltips-icon" name={item.icon.name} size={item.icon.size} />
          </div>
        ))}
      </div>
    )}
  </div>
</Section>

<style lang="scss">
.wrapper {
  max-width: 40rem;
  margin: 0 auto;
  background-color: var(--dark-background);
  border-radius: 1.6rem;
  
  @include tablet {
    max-width: 60rem;
    border-radius: 2rem;
  }
  @include laptop {
    border-radius: 3rem;
  }
}

.inner {
  padding: 3rem 1.6rem 1.6rem;

  @include tablet {
    padding-top: 4rem;
  }
  @include laptop {
    padding: 6rem 3rem 3rem;
  }
}

.title {
  margin-bottom: 1.6rem;
  
  @include tablet {
    margin-bottom: 2rem;
  }
}

.descr {
  margin-bottom: 1.6rem;

  @include tablet {
    margin-bottom: 4.5rem;
  }
  @include laptop {
    margin-bottom: 6rem;
  }
}

.form {
  @include tablet {
    max-width: 42rem;
    margin: 0 auto;
  }
}

.agreement {
  margin-top: 2rem;
}

.tooltips {
  padding: 1.6rem;
  border-top: 0.1rem solid #DDDEDF;

  @include tablet {
    display: flex;
    column-gap: 1.6rem;
  }
  @include laptop {
    padding: 3rem;
  }
}

.tooltips-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-grow: 1;
  flex-shrink: 0;
  flex-basis: 0%;
  border-radius: 1.5rem;
  padding: 1.5rem 2rem;
  font-size: 1.5rem;
  line-height: 1.4;
  background-color: var(--light-primary);
  cursor: pointer;

  &:hover {
    color: var(--dark-primary);
  }
}

.tooltips-item + .tooltips-item {
  @include mobile-only {
    margin-top: 1rem;
  }
}

.tooltips-icon {
  color: var(--blue-primary);
}
</style>
