---
import Logo from "@/components/common/Logo.astro";
import Button from "@/components/common/Button.astro";
---

<header class="header">
  <div class="header-container container">
    <Logo class="header-logo" area="header"/>
    <nav class="navigation">
      <ul class="navigation-list">
        <li>
          <a href="" class="navigation-link">О нас</a>
        </li>
        <li>
          <a href="" class="navigation-link">Тарифы</a>
        </li>
        <li>
          <a href="" class="navigation-link">Услуги</a>
        </li>
      </ul>
    </nav>
    <Button class="button-request">Оставить заявку</Button>
    <Button class="button-menu">Меню</Button>
  </div>
</header>

<style lang="scss">
.header {
  padding: 1rem 0;
  border-bottom: 0.01rem solid #E1E1E1;
}

.header-container {
  display: flex;

  @include mobile-only {
    margin: 0 1rem;
  }
}

.header-logo {
  margin-right: auto;
}

.navigation {
  margin-right: 2.5rem;

  @include laptop-max {
    display: none;
  }
}

.navigation-list {
  display: flex;
  height: 100%;
  margin: 0;
}

.navigation-link {
  display: inline-flex;
  align-items: center;
  height: 100%;
  padding: 0 2.5rem;
  font-weight: 700;
  font-size: 1.8rem;
  line-height: 1.11;
  color: var(--dark-secondary);
  text-decoration: none;
  transition: color 0.3s;
}

.navigation-link:hover,
.navigation-link:focus {
  color: var(--dark-primary);
}

.button-request {
  @include mobile-only {
    display: none;
  }
}

.button-menu {
  margin-left: 1rem;
}
</style>
