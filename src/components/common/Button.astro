---
const { class: className = '', color = '', ...rest } = Astro.props;

const allowedColors = ['white', 'ligth'];

if (color && !allowedColors.includes(color)) {
  throw new Error(`Неверный цвет кнопки: "${color}". Допустимые значения: ${allowedColors.join(', ')}`);
}
---

<button class={`button ${color} ${className}`} {...rest}>
  <slot />
</button>

<style lang="scss">
.button {
  height: 5rem;
  padding: 1.5rem;
  font-family: var(--font-primary);
  font-weight: 700;
  font-size: 1.6rem;
  line-height: 1;
  letter-spacing: -0.02em;
  color: var(--light-primary);
  background-color: var(--dark-primary);
  border: none;
  border-radius: 10rem;
  cursor: pointer;
  transition: color 0.3s, background-color 0.3s, border-color 0.3s;

  @include laptop {
    height: 6rem;
    padding: 2rem;
    font-size: 1.8rem;
  }
}

.button:hover,
.button:focus {
  background-color: var(--blue-primary);
}

.button.white {
  color: var(--dark-primary);
  background-color: var(--light-primary);
}

.button.white:hover,
.button.white:focus {
  background-color: rgba(#ffffff, 0.5);
}

.button.ligth {
  color: var(--dark-terteriary);
  background-color: var(--light-primary);
  border: 0.1rem solid var(--dark-terteriary);
}

.button.ligth:hover,
.button.ligth:focus {
  color: var(--dark-secondary);
  background-color: var(--dark-background);
  border-color: var(--dark-secondary);
}
</style>
