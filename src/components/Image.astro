---
const {
  src,
  srcset,
  width,
  height,
  loading = "lazy",
  decoding = "async",
  alt = "",
  class: className = '',
  ...rest
} = Astro.props;
---

<img
  class={`image ${className}`}
  src={src}
  srcset={srcset}
  width={width}
  height={height}
  loading={loading}
  decoding={decoding}
  alt={alt}
  {...rest}
/>

<style>
.image {
  display: block;
}
</style>