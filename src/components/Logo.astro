---
const { class: className = '', area, ...rest } = Astro.props;
const finalClass = `logo ${area ? `logo--${area}` : ''} ${className}`.trim();
---

<a class:list={finalClass} href="/" target="_blank" {...rest} >
  <img class="logo__icon" src="/logo/logo.svg" width="50" height="50" alt="" />
  <img class="logo__text" src="/logo/logo-text.svg" width="129" height="36" alt="" />
  <span class="sr-only">Главная страница</span>
</a>

<style>
.logo {
  display: inline-flex;
  align-items: center;
  column-gap: 1rem;
}

@media (min-width: 678px) {
  .logo--header .logo__text {
    width: 14.5rem;
    height: 4rem;
  }
}

@media (min-width: 1024px) {
  .logo--header .logo__icon {
    width: 6rem;
    height: 6rem;
  }
  .logo--header .logo__text {
    width: 16.2rem;
    height: 4.4rem;
  }
}
</style>