---
import Section from "../../common/Section.astro";
import Icon from '../../common/Icon.astro';

const { data } = Astro.props;
---

<Section size="small">
  <ul class="list">
    {data.items.map((item) => (
      <li class="item">
        <Icon class="icon" name={item.icon.name} width={item.icon.width} height={item.icon.height} />
        <p class="descr gl-descr" set:html={item.descr} />
      </li>
    ))}
  </ul>
</Section>

<style lang="scss">
.list {
  margin: 0;
  padding: 0;
  list-style-type: none;

  @include tablet {
    display: flex;
  }
}

.item {
  flex-grow: 1;
  flex-shrink: 0;
  flex-basis: 0;
  margin-top: 3rem;

  @include tablet {
    margin-top: 0;
  }
}

.icon {
  display: block;
  margin: 0 auto;
  margin-bottom: 2rem;
}

.descr {
  @include tablet-only {
    font-size: 1.6rem;
    letter-spacing: -0.03em;
  }
}
</style>