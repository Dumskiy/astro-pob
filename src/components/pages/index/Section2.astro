---
import Picture from "../../common/Picture.astro";
import Image from "../../common/Image.astro";

const progressSizes = {
  "320": [288, 193],
  "768": [346, 208],
  "1024": [467, 321],
  "1440": [482, 291]
};
---

<section class="marg-bott">
  <div class="container small">
    <div class="progress-wrapper">
      <div class="progress-hero">
        <div class="progress-hero__content">
          <h2 class="progress-hero__title">Пусть за&nbsp;нас скажут поступки</h2>
          <p class="progress-hero__descr">Мы&nbsp;начинали с&nbsp;обычной доработкой&nbsp;1С, но&nbsp;потом все закрутилось</p>
        </div>
        <Picture class="progress-hero__img" path="images/index/section2" sizes={progressSizes}/>
      </div>
      <div class="progress-card">
        <p class="progress-card__descr">Первые запустили банковскую бухгалтерию</p>
        <Image src="images/index/section2-cup.webp" width="60" height="60"/>
      </div>
      <div class="progress-card">
        <p class="progress-card__descr">Первые запустили бухгалтерию на&nbsp;АвтоУСН</p>
        <Image src="images/index/section2-cup.webp" width="60" height="60"/>
      </div>
      <div class="progress-card">
        <p class="progress-card__descr">Первые выпустили МЧД для отправки отчётов за&nbsp;клиентов</p>
        <Image src="images/index/section2-cup.webp" width="60" height="60"/>
      </div>
      <div class="progress-last">
        <p class="progress-last__descr">
          <span>И&nbsp;это ещё не&nbsp;всё:</span> входим в&nbsp;кластер &laquo;Сколково&raquo; и&nbsp;реестр Российского&nbsp;ПО
        </p>
      </div>
    </di>
  </div>
</section>

<style lang="scss">
.progress-wrapper {
  display: flex;
  flex-direction: column;
  gap: 1rem;

  @include tablet {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  @include laptop {
    column-gap: 3rem;
  }
}

.progress-hero,
.progress-card {
  padding: 1.6rem;
  background-color: var(--dark-background);
  border-radius: 1.6rem;

  @include tablet {
    border-radius: 2rem;
  }
  @include laptop {
    padding: 3rem;
    border-radius: 3rem;
  }
}

.progress-hero {
  padding: 0;

  @include tablet {
    grid-row: 1 / 5;
  }

  &__content {
    padding: 1.6rem;
    text-align: center;

    @include laptop {
      padding: 4rem 4rem 1.6rem;
    }
  }

  &__title {
    font-size: 2.6rem;

    @include tablet {
      font-size: 3rem;
    }
    @include laptop {
      font-size: 3.6rem;
    }
  }

  &__descr {
    margin-top: 2rem;
    @include laptop {
      font-size: 2rem;
    }
  }

  &__img {
    margin: 0 auto;
  }
}

.progress-card {
  display: flex;
  align-items: center;
  column-gap: 3rem;

  &__descr {
    margin-right: auto;

    @include laptop {
      font-size: 2rem;
    }
  }
}

.progress-last {
  --padding: 1.6rem;
  --border-width: 0.2rem;
  --border-radius: 1.6rem;
  position: relative;
  margin: var(--border-width);
  padding: calc(var(--padding) - var(--border-width));
  border-radius: calc(var(--border-radius) - var(--border-width));
  background-color: var(--light-primary);
  font-weight: 600;
  line-height: 1.3;

  @include tablet {
    --border-radius: 2rem;
  }
  @include laptop {
    --padding: 3rem;
    --border-radius: 3rem;
    font-size: 2rem;
    line-height: 1.5;
  }

  &__descr {
    background: var(--blue-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  &__descr > span {
    color: var(--dark-secondary);
    background-clip: border-box;
    -webkit-background-clip: border-box;
    -webkit-text-fill-color: var(--dark-secondary);
  }

  &::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;
    margin: calc(-1 * var(--border-width));
    border-radius: var(--border-radius);
    background: var(--blue-gradient);
  }
}
</style>
